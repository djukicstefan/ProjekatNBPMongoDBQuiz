@{
    ViewData["Title"] = "Login page";
}

<div class="container d-flex" style="justify-content: center;">
    <div class="card" style="width: 30rem;">
        <div class="card-body">
            <h5 class="card-title">Prijava</h5>
            <form method="post" asp-action="TryLogin" asp-controller="User">
                <div class="form-group">
                    <label for="username">Korisničko ime</label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="Korisničko ime">
                </div>
                <div class="form-group">
                    <label for="password">Lozinka</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Lozinka">
                </div>
                <div class="">
                    <button type="submit" class="btn btn-primary d-flex" style="justify-self: start;">Potvrdi</button>
                    <small class="d-flex" style="justify-self: end;">
                        Nemaš nalog?&nbsp&nbsp<a asp-controller="User" asp-action="Register">
                            Registruj se
                            ovde
                        </a>
                    </small>
                </div>
            </form>
        </div>
    </div>

</div>
